            <input type="text" id="password" placeholder="Nombre" required autocomplete="off">
            <button id="boton">Ingresar</button>
        </form>
        <center><div>¿Ya tienes cuenta? Inicia sesión aquí: <a id="p" href="/iniciar-sesion">Inicia Sesión aquí</a></div></center>
